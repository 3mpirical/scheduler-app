<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css"  href="./css/main.css">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto:300" rel="stylesheet">
        <title>Calendar App</title>
    </head>
    <body>
        <div class="calendar">
            <div class="calendar__heading">
            </div>

            <div class="calendar__month-buttons">
                <button type="button" class="previous-month"><div class="u-absolute-center"><</div></button>
                <button type="button" class="next-month" ><div class="u-absolute-center">></div></button>

            </div>

            <div class="calendar__dates-container">
                <div class="calendar__days-header">
                    <div class="day-of-week red"><div class="u-absolute-center">Sunday</div></div>
                    <div class="day-of-week"><div class="u-absolute-center">Monday</div></div>
                    <div class="day-of-week"><div class="u-absolute-center">Tuesday</div></div>
                    <div class="day-of-week"><div class="u-absolute-center">Wednesday</div></div>
                    <div class="day-of-week"><div class="u-absolute-center">Thursday</div></div>
                    <div class="day-of-week"><div class="u-absolute-center">Friday</div></div>
                    <div class="day-of-week red"><div class="u-absolute-center">Saturday</div></div>
                </div>

                <div class="calendar__dates-row">
                    <div class="calendar__box red" index="0"></div>
                    <div class="calendar__box" index="1"></div>
                    <div class="calendar__box" index="2"></div>
                    <div class="calendar__box" index="3"></div>
                    <div class="calendar__box" index="4"></div>
                    <div class="calendar__box" index="5"></div>
