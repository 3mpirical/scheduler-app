                    <div class="calendar__box" index="17"></div>
                    <div class="calendar__box" index="18"></div>
                    <div class="calendar__box" index="19"></div>
                    <div class="calendar__box red" index="20"></div>
                </div>
                <div class="calendar__dates-row">
                    <div class="calendar__box red" index="21"></div>
                    <div class="calendar__box" index="22"></div>
                    <div class="calendar__box" index="23"></div>
                    <div class="calendar__box" index="24"></div>
                    <div class="calendar__box" index="25"></div>
